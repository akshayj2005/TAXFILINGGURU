<script>
(function () {
    const form = document.getElementById('regForm');
    const btn = document.getElementById('regSubmitBtn');
    const err = document.getElementById('regError');

    const planName = form.dataset.planName;
    const planRate = form.dataset.planRate;
    const isNri = form.dataset.isNri === 'true';

    function showErr(msg) {
        err.textContent = msg;
        err.classList.remove('hidden');
        btn.disabled = false;
        btn.textContent = 'File Your Tax Now';
        err.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }

    form.addEventListener('submit', function (e) {
        e.preventDefault();
        err.classList.add('hidden');
        btn.disabled = true;
        btn.textContent = 'Processing...';

        const name = document.getElementById('reg-name').value.trim();
        const email = document.getElementById('reg-email').value.trim();
        const phone = document.getElementById('reg-phone').value.trim();
        const pan = document.getElementById('reg-pan').value.trim();
        const message = document.getElementById('reg-message').value.trim();
        const terms = document.getElementById('reg-terms').checked;

        if (isNri) {
            const country = document.getElementById('reg-country').value.trim();
            if (!country) return showErr('Please enter your country of residence.');
        }

        if (!name) return showErr('Please enter your full name.');
        if (!email || !/\S+@\S+\.\S+/.test(email)) return showErr('Please enter a valid email address.');
        if (!phone || phone.length < 7) return showErr('Please enter a valid phone number.');
        if (!terms) return showErr('Please agree to the Terms & Privacy Policy.');

        // Store details for checkout/payment
        localStorage.setItem('regDetails', JSON.stringify({
            name, email, phone, plan: planName, rate: planRate, source: 'parametric'
        }));

        const whatsappMsg = encodeURIComponent(`Hello Tax Filing Guru! ðŸ‘‹\n\nI would like to register for:\n*Salary Essential* (â‚¹2,500 + GST)\n\nName: ${name}\nEmail: ${email}\nPhone: ${phone}\nPAN: ${pan}\nRequirements: ${message}`);
        
        btn.textContent = 'Submission Successful!';
        showPopup({ 
            title: 'ðŸŽ‰ Thank You!', 
            message: `Your registration for Salary Essential has been submitted.\nRedirecting to login...`, 
            type: 'success', 
            confirmText: 'Chat on WhatsApp', 
            showCancel: true, 
            callback: (confirmed) => { 
                if (confirmed) {
                    window.open(`https://api.whatsapp.com/send?phone=919811945176&text=${whatsappMsg}`, '_blank'); 
                }
                window.location.href = isNri ? '/login?type=nri' : '/login?type=resident';
            } 
        });
    });
})();
</script>
