<section class="w-full hero-bg py-10 px-4 relative flex flex-col justify-center">
  <div class="max-w-7xl mx-auto relative z-10 text-center w-full">
    <h2 class="font-heading text-5xl md:text-6xl font-extrabold text-white mb-6 tracking-tight drop-shadow-sm">
      Trader <span class="text-gray-100">Turnover</span>
    </h2>
    <p class="text-lg text-gray-100 max-w-2xl mx-auto font-light">
      Calculate your F&O/Intraday turnover correctly to know if you need a Tax Audit.
    </p>
  </div>
</section>

<div class="max-w-4xl mx-auto py-12 px-4">
  <div class="bg-white rounded-3xl shadow-xl border border-gray-100 p-8">

    <div class="flex justify-between items-center mb-6">
      <h3 class="text-xl font-bold text-gray-800">Add Your Trades</h3>
      <button onclick="addTradeRow()"
        class="bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold py-2 px-4 rounded-lg text-sm transition-colors">
        + Add Trade
      </button>
    </div>

    <div class="overflow-x-auto mb-6">
      <table class="w-full text-left text-sm" id="tradeTable">
        <thead class="bg-gray-50 text-gray-600 uppercase tracking-wider font-bold border-b border-gray-200">
          <tr>
            <th class="p-4 rounded-tl-lg">Trade ID</th>
            <th class="p-4">Profit / Loss (₹)</th>
            <th class="p-4 rounded-tr-lg w-20">Action</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <!-- Dynamic Rows -->
        </tbody>
      </table>
    </div>

    <button onclick="calculateTraderTurnover()"
      class="w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-4 rounded-xl shadow-lg transition-all transform hover:scale-[1.02]">
      Calculate Turnover
    </button>

    <!-- Result Section -->
    <div id="result" class="hidden mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="p-6 bg-purple-50 rounded-2xl border border-purple-100">
        <p class="text-gray-500 font-bold text-xs uppercase mb-1">Total Turnover</p>
        <h3 class="text-3xl font-black text-purple-800" id="turnoverValue">₹0</h3>
        <p class="text-xs text-gray-500 mt-2">Sum of Absolute Profit + Absolute Loss</p>
      </div>

      <div id="auditBox" class="p-6 bg-green-50 rounded-2xl border border-green-100 flex items-center justify-center">
        <div class="text-center">
          <h4 class="text-xl font-bold text-green-700 mb-1" id="auditStatus">Audit Not Required</h4>
          <p class="text-sm text-green-600" id="auditReason">Turnover is within limits.</p>
        </div>
      </div>
    </div>

  </div>
</div>