<section class="w-full hero-bg py-10 px-4 relative flex flex-col justify-center">
  <div class="max-w-7xl mx-auto relative z-10 text-center w-full">
    <h2 class="font-heading text-5xl md:text-6xl font-extrabold text-white mb-6 tracking-tight drop-shadow-sm">
      <%= seo.headings.h1 %>
    </h2>
    <p class="text-lg text-gray-100 max-w-2xl mx-auto font-light">
      <%= seo.description %>
    </p>
  </div>
</section>

<div class="max-w-6xl mx-auto py-12 px-4">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

    <!-- Input Form -->
    <div class="lg:col-span-1 bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
      <h3 class="text-xl font-bold text-gray-800 mb-6">Enter Details</h3>
      <form id="taxForm" class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Annual Gross Income (₹)</label>
          <input type="number" id="income" required placeholder="e.g. 1500000"
            class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Total Deductions (₹) <span
              class="text-xs text-gray-400 font-normal">(80C, 80D, etc. - for Old Regime)</span></label>
          <input type="number" id="deductions" value="0"
            class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
        </div>
        <button type="submit"
          class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 rounded-lg transition-colors shadow-lg">
          Calculate Comparison
        </button>
      </form>
    </div>

    <!-- Results Display -->
    <div class="lg:col-span-2 space-y-6">
      <div id="results" class="hidden grid grid-cols-1 md:grid-cols-3 gap-4">

        <!-- Old Regime -->
        <div class="bg-white p-5 rounded-xl border-t-4 border-gray-400 shadow-sm">
          <h4 class="text-gray-500 font-bold text-sm uppercase">Old Regime</h4>
          <p class="text-2xl font-black text-gray-800 mt-2" id="tax-old">₹0</p>
          <div class="mt-4 text-xs text-gray-500 space-y-1">
            <p>Taxable: <span id="taxable-old">₹0</span></p>
            <p>Deductions: <span id="ded-old">₹0</span></p>
          </div>
        </div>

        <!-- New Regime FY 24-25 -->
        <div class="bg-white p-5 rounded-xl border-t-4 border-blue-400 shadow-sm">
          <h4 class="text-blue-500 font-bold text-sm uppercase">New (FY 24-25)</h4>
          <p class="text-2xl font-black text-gray-800 mt-2" id="tax-24">₹0</p>
          <div class="mt-4 text-xs text-gray-500 space-y-1">
            <p>Taxable: <span id="taxable-24">₹0</span></p>
            <p>Std. Ded: ₹75,000</p>
          </div>
        </div>

        <!-- New Regime FY 25-26 -->
        <div class="bg-white p-5 rounded-xl border-t-4 border-green-500 shadow-md transform scale-105">
          <div class="flex justify-between">
            <h4 class="text-green-600 font-bold text-sm uppercase">New (FY 25-26)</h4>
            <span class="bg-green-100 text-green-700 text-[10px] px-2 py-0.5 rounded-full font-bold">LATEST</span>
          </div>
          <p class="text-3xl font-black text-green-600 mt-2" id="tax-25">₹0</p>
          <div class="mt-4 text-xs text-gray-500 space-y-1">
            <p>Taxable: <span id="taxable-25">₹0</span></p>
            <p>Std. Ded: ₹75,000</p>
          </div>
        </div>

      </div>

      <div id="placeholder"
        class="h-64 flex items-center justify-center bg-gray-100 rounded-2xl border-2 border-dashed border-gray-300">
        <p class="text-gray-400 italic">Enter your income to see the comparison</p>
      </div>

      <!-- Comparison Table (Mobile Friendly) -->
      <div id="table-container" class="hidden bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
        <table class="w-full text-left text-sm">
          <thead class="bg-gray-50">
            <tr>
              <th class="p-4 font-bold text-gray-700">Details</th>
              <th class="p-4 font-bold text-gray-700">Old</th>
              <th class="p-4 font-bold text-green-700">New (25-26)</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <tr>
              <td class="p-4 text-gray-600">Standard Deduction</td>
              <td class="p-4">₹50,000</td>
              <td class="p-4">₹75,000</td>
            </tr>
            <tr>
              <td class="p-4 text-gray-600">Base Tax</td>
              <td class="p-4" id="base-old">₹0</td>
              <td class="p-4" id="base-25">₹0</td>
            </tr>
            <tr>
              <td class="p-4 text-gray-600">Health & Edu Cess (4%)</td>
              <td class="p-4" id="cess-old">₹0</td>
              <td class="p-4" id="cess-25">₹0</td>
            </tr>
            <tr class="bg-green-50">
              <td class="p-4 font-bold text-gray-800">Total Tax</td>
              <td class="p-4 font-bold text-gray-800" id="total-old">₹0</td>
              <td class="p-4 font-bold text-green-700" id="total-25">₹0</td>
            </tr>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>