<section class="w-full hero-bg py-10 px-4 relative flex flex-col justify-center">
  <div class="max-w-7xl mx-auto relative z-10 text-center w-full">
    <h2 class="font-heading text-5xl md:text-6xl font-extrabold text-white mb-6 tracking-tight drop-shadow-sm">
      Refund <span class="text-gray-100">Status</span>
    </h2>
    <p class="text-lg text-gray-100 max-w-2xl mx-auto font-light">
      Track your refund status directly from the Income Tax Department.
    </p>
  </div>
</section>

<div class="max-w-4xl mx-auto py-12 px-4">
  <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-gray-100 p-8 md:p-12">

    <div class="text-center mb-8">
      <h3 class="text-2xl font-bold text-gray-800">Check Your Status</h3>
      <p class="text-gray-500">Enter your PAN and Assessment Year to check.</p>
    </div>

    <form id="statusForm" class="space-y-6 max-w-md mx-auto">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Permanent Account Number (PAN)</label>
        <input type="text" id="pan" required placeholder="ABCDE1234F"
          class="w-full p-4 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none uppercase transition-all">
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Assessment Year</label>
        <select id="ay"
          class="w-full p-4 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none bg-white">
          <option value="2025-26">2025-26</option>
          <option value="2024-25">2024-25</option>
          <option value="2023-24">2023-24</option>
        </select>
      </div>

      <button type="submit"
        class="w-full bg-pink-600 hover:bg-pink-700 text-white font-bold py-4 rounded-xl shadow-lg transition-all transform hover:scale-[1.02]">
        Track Status
      </button>
    </form>

    <!-- Simulation Result -->
    <div id="result" class="hidden mt-12 border-t border-gray-100 pt-8">
      <h4 class="text-center text-gray-600 font-medium mb-8">Status for PAN: <span id="displayPan"
          class="font-bold text-gray-800"></span></h4>

      <div class="relative">
        <div class="absolute left-1/2 transform -translate-x-1/2 h-full w-1 bg-gray-200"></div>

        <!-- Step 1 -->
        <div class="relative z-10 flex items-center justify-between mb-8">
          <div class="order-1 w-5/12 text-right pr-4">
            <h5 class="font-bold text-gray-800">Return Filed</h5>
            <p class="text-xs text-gray-500">July 31, 2024</p>
          </div>
          <div
            class="order-2 w-8 h-8 bg-green-500 rounded-full flex items-center justify-center border-4 border-white shadow">
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <div class="order-3 w-5/12 pl-4"></div>
        </div>

        <!-- Step 2 -->
        <div class="relative z-10 flex items-center justify-between mb-8">
          <div class="order-1 w-5/12"></div>
          <div
            class="order-2 w-8 h-8 bg-green-500 rounded-full flex items-center justify-center border-4 border-white shadow">
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <div class="order-3 w-5/12 pl-4">
            <h5 class="font-bold text-gray-800">E-Verified</h5>
            <p class="text-xs text-gray-500">Aug 01, 2024</p>
          </div>
        </div>

        <!-- Step 3 -->
        <div class="relative z-10 flex items-center justify-between mb-8">
          <div class="order-1 w-5/12 text-right pr-4">
            <h5 class="font-bold text-gray-800">Processed</h5>
            <p class="text-xs text-gray-500">Sep 15, 2024</p>
          </div>
          <div
            class="order-2 w-8 h-8 bg-green-500 rounded-full flex items-center justify-center border-4 border-white shadow">
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <div class="order-3 w-5/12"></div>
        </div>

        <!-- Step 4 -->
        <div class="relative z-10 flex items-center justify-between">
          <div class="order-1 w-5/12"></div>
          <div
            class="order-2 w-8 h-8 bg-yellow-400 rounded-full flex items-center justify-center border-4 border-white shadow animate-pulse">
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="order-3 w-5/12 pl-4">
            <h5 class="font-bold text-yellow-600">Refund Awaiting</h5>
            <p class="text-xs text-gray-500">Estimated: 5 Days</p>
          </div>
        </div>
      </div>

      <div class="mt-12 text-center p-4 bg-yellow-50 rounded-xl border border-yellow-100">
        <p class="text-sm text-yellow-800"><strong>Note:</strong> This is a simulation. For live status, please visit
          the <a href="https://tin.tin.nsdl.com/oltas/refund-status-pan.html" target="_blank"
            class="underline font-bold">Official NSDL Portal</a>.</p>
      </div>

    </div>
  </div>
</div>



<script>
  document.getElementById('statusForm').addEventListener('submit', (e) => {
    e.preventDefault();
    const pan = document.getElementById('pan').value;
    if (pan.length !== 10) {
      showPopup({ title: 'Invalid PAN', message: 'Please enter a valid 10-digit Permanent Account Number (PAN).', type: 'error' });
      return;
    }

    document.getElementById('displayPan').innerText = pan.toUpperCase();
    document.getElementById('result').classList.remove('hidden');

    // Simulate loading/scroll
    document.getElementById('result').scrollIntoView({ behavior: 'smooth' });
  });
</script>